<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./head'); %>
  </head>
  <body>
    <!-- header -->
    <header id="header-login">
      <nav class="navbar" id="Pinterest-icon">
        <a class="navbar-brand" href="#">
          <img
            src="/images/logo.png"
            width="30"
            height="30"
            class="d-inline-block align-top"
            alt=""
          />

          <p class="font-italic">Pinterest</p>
        </a>
      </nav>
    </header>
    <!-- main -->
    <main class="auth-page">
      <div
        id="login-form"
        class="row justify-content-center align-items-center h-100"
      >
        <div class="col col-sm-6 col-md-6 col-lg-4">
          <form method="post" action="/login">
            <div class="form-group">
              <label for="email">Email:</label>
              <input
                name="email"
                type="email"
                required
                class="form-control"
                id="email-login"
                aria-describedby="emailHelp"
                placeholder="Enter your email"
                maxlength="54"
                size="54"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                name="password"
                type="password"
                required
                class="form-control"
                id="password-login"
                placeholder="Password"
              />
            </div>
            <div id="auth-form-actions">
              <button type="submit" class="btn btn-primary">Submit</button>
              <a href="/sign-up" class="link-primary">Sign up</a>
            </div>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
