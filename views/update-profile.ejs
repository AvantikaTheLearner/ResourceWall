<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./head'); %>
  </head>

  <body>
    <!-- header -->
    <%- include('./header'); %>
    <!-- main -->
    <main class="auth-page">
      <div>
        <p class="font-weight-bold" id="update-profile">
          You Can Update Your Profile!!
        </p>
      </div>
      <div
        id="update-profile-form"
        class="row justify-content-center align-items-center h-100"
      >
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-12">
          <form method="post" action="/update-profile">
            <div class="form-group">
              <label for="user-name">Name:</label>
              <input
                name="name"
                type="text"
                required
                class="form-control"
                id="user-name-update"
                aria-describedby="nameHelp"
                placeholder="name"
                autocomplete="name"
                value="<%= name %>"
              />
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input
                name="email"
                type="email"
                required
                class="form-control"
                id="email-update"
                aria-describedby="emailHelp"
                placeholder="email"
                autocomplete="email"
                value="<%= email %>"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                name="password"
                type="password"
                required
                class="form-control"
                id="password-update"
                placeholder="Password"
                autocomplete="current-password"
              />
            </div>
            <div class="auth-form-actions">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
